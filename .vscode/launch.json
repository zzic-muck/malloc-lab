    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/mdriver",
            "args": [],
            "stopAtEntry":false,
            "cwd": "${fileDirname}",
            "environment":[],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "gdb에 자동 서식 지정 사용",
                    "text": "-enable-pretty-printing",
                    "ignorefailures": true
                },
                {
                    "description":  "디스어셈블리 버전을 att(으)로 설정",
                    "text": "-gdb-set disassembly-flavor att",
                    "ignoreFailures": true
                }
            ],
            
        }
    ]
}